<?xml version="1.0" encoding="utf-8"?>
<!-- item_result.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginHorizontal="25dp"
    android:layout_marginVertical="15dp"
    android:background="@drawable/bgresultcard"
    android:elevation="5dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_departure_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="10:00"
            android:fontFamily="@font/gt_walsheim_pro_bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="3h 20 mins"
            android:fontFamily="@font/gt_walsheim_pro_regular"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_arrival_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="16:45"
            android:fontFamily="@font/gt_walsheim_pro_bold"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textAppearance="?android:textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/imageView_company_logo"
            android:layout_width="match_parent"
            android:src="@drawable/buscompanylogo"
            android:layout_height="50dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Santa Cruz "
            android:layout_weight="1"
            android:fontFamily="@font/gt_walsheim_pro_regular"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textAlignment="center"
            android:paddingHorizontal="10dp"
            android:textAppearance="?android:textAppearanceMedium" />
        <TextView
            android:id="@+id/textView_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="  -  "
            android:fontFamily="@font/gt_walsheim_pro_regular"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textAppearance="?android:textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="La Paz"
            android:layout_weight="1"
            android:fontFamily="@font/gt_walsheim_pro_regular"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textAlignment="center"
            android:paddingHorizontal="10dp"
            android:textAppearance="?android:textAppearanceMedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Asiento: "
                    android:fontFamily="@font/gt_walsheim_pro_regular"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView_seat_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Normal"
                    android:fontFamily="@font/gt_walsheim_pro_regular"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textAppearance="?android:textAppearanceMedium" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio de Boleto: "
                    android:fontFamily="@font/gt_walsheim_pro_regular"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="150"
                    android:fontFamily="@font/gt_walsheim_pro_bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textAppearance="?android:textAppearanceMedium" />

                <TextView
                    android:id="@+id/textView_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Bs"
                    android:fontFamily="@font/gt_walsheim_pro_bold"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textAppearance="?android:textAppearanceMedium" />


            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/button_journey_selected"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bgbutton"
            android:layout_marginRight="5dp"
            android:layout_gravity="end|bottom"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:elevation="5dp"
            android:src="@drawable/baseline_navigate_next_24"/>

    </LinearLayout>

</LinearLayout>
